<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#00ffffff"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_time_tv_bg"
        android:textColor="@color/colorWhite"
        android:text="2016-12-9"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="6dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <FrameLayout
            android:id="@+id/account_item_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <com.owenandroid.staraccount.widgets.CircleImageView

                android:id="@+id/item_icon_bg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@color/colorCommon" />

            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@mipmap/common" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/account_item_frame"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_in_name_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一般 34.0"
                android:textSize="14sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/item_in_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="这是备注hahahh"
                android:textColor="#ccf"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/account_item_frame"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_out_name_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一般 34.0"
                android:textSize="14sp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/item_out_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="这是备注hahahh"
                android:textSize="12sp"
                android:textColor="#ccf"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>